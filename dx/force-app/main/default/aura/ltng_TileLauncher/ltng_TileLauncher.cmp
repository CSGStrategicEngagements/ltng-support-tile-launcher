<!--
/**
* User Friendly list of tiles that can launch different apps or navigate within Salesforce.
* @component: ltng_TileLauncher
**/
-->
<aura:component
    controller="ltng_TileLauncherCtrl"
    implements="force:appHostable,flexipage:availableForAllPageTypes"
    access="global"
>
    <!-- attributes -->
    <aura:attribute name="debug" type="Boolean" default="false" access="global" />
    <aura:attribute name="enableCaching" type="Boolean" default="false" access="global" />
    <!-- private attributes -->
    <aura:attribute name="maxTileSize" type="Integer" default="200" access="private" />
    <aura:attribute name="tiles" type="ltng_TileLauncherEntry__c[]" access="private" />
    <aura:attribute name="setupComplete" type="Boolean" default="false" access="private" />
    <!-- handlers -->
    <aura:handler name="init" value="{!this}" action="{!c.init}" />
    <!-- events -->
    <!-- elements -->
    <div class='narrow homeHomeCard'>
        <div class='slds-card forceBaseCard'>
            <div class='slds-card__header slds-grid'>
            	<header class='slds-media slds-media--center slds-has-flexi-truncate'>
                	<div class='slds-media__body'>
                    	<h2>
                            <a href='javascript:void(0);' class='slds-card__header-link slds-truncate'>
                            	<span class='slds-text-heading--small'>Quick Links</span>
                            </a>
                        </h2>
                    </div>
                </header>
            </div>
            <div class="slds-app-launcher__header-search">
            <div class="slds-form-element">
                <label for="app-launcher-search" class="slds-form-element__label slds-assistive-text">Find an app</label>
                <div class="slds-form-element__control slds-input-has-icon slds-input-has-icon_left">
                    <lightning:input type="search" label="search" name="search" placeholder="Find an app..." />
                </div>
            </div>
            </div>
            <div class='slds-card__body slds-p-top_medium slds-m-around_medium'>
                <ul class='slds-grid slds-grid--pull-padded slds-wrap'>
                <aura:iteration items='{! v.tiles }' var='tile'>
                    <li class="slds-p-horizontal_small slds-size_1-of-1 slds-medium-size_1-of-3 slds-large-size_1-of-4">
                        <a aria-describedby="drag-instructions" draggable="true" href="javascript:void(0);" class="slds-app-launcher__tile slds-text-link_reset slds-is-draggable">
                            <div class="slds-app-launcher__tile-figure">
                            <span class="slds-avatar slds-avatar_large">
                                <abbr class="slds-avatar__initials slds-icon-custom-59" title="company name">MC</abbr>
                            </span>
                            <span class="slds-icon_container" title="Drag item to a new location">
                                <lightning:icon iconName="utility:rows" alternativeText="drag me" size="xx-small" />
                            </span>
                            </div>
                            <div class="slds-app-launcher__tile-body">
                            <span class="slds-text-link">Marketing Cloud</span>
                            <p>Salesforce Marketing Cloud lets businesses of any size...
                                <span class="slds-text-link">More</span>
                            </p>
                            </div>
                        </a>
                    </li>
                    <!--
                    <c:ltng_TileLauncherTile tile="{!tile}" />
                    -->
                </aura:iteration>
                </ul>
            </div>
        </div>
    </div>
</aura:component>
